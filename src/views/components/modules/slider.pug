script(type="text/x-template")#slider
    .slider
        info(
            :work="currentWork"
        )
        display(
            :work="currentWork"
        )
        buttons(
            :works="works",
            :currentIndex="currentIndex",
            @slide="handleSlide"
        )

script(type="text/x-template")#slider-info
    .slider__info-container
        .slider__info-title
            h2.block-subtitle {{ work.title }}
        .slider__info-skills {{ work.skills }}
        .slider__info-button
            a(:href="work.link" target="_blank").btn-show-portfolio-site Посмотреть сайт

script(type="text/x-template")#slider-display
    .slider__display
        img(:src="work.photo", alt="work1").slider__big-pic

script(type="text/x-template")#slider-buttons
    .slider__buttons
        .slider__button(@click="slide('prev')")
            .slider__button-img-wrap
                img(:src="getReqImage('prev').photo").slider__btn-pic
        .slider__button.slider__button--next(@click="slide('next')")
            .slider__button-img-wrap
                img(:src="getReqImage('next').photo").slider__btn-pic

