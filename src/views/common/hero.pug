section.hero
  -
    var socials = [
      ["vk", "https://vk.com/enmalafeev"],
      ["github", "https://github.com/enmalafeev"],
      ["in", "https://www.linkedin.com/in/%D0%B5%D0%B2%D0%B3%D0%B5%D0%BD%D0%B8%D0%B9-%D0%BC%D0%B0%D0%BB%D0%B0%D1%84%D0%B5%D0%B5%D0%B2-14403a120/"]
    ]
  .hero__links
    ul.socials
      each item in socials
        li.socials__item
          a(href=`${item[1]}`).socials__link
            +icon(item[0], "socials__link-icon")

  button.hamburger.hero__menu
    +icon("hamburger", "hero__menu-hamburger")

  .hero__title
    -if (title == 'Блог')
      .section-title-blog
    - else
      .section-title

    .user.hero__user
      .user__img
        +image("avatar.jpg", "Малафеев Евгений", "user__img-pic")
      .user__desc
        h1.user__name Евгений Малафеев
        - if (title == 'Блог')
          p.user-info Статьи, которые я написал
        - else
          p.user__info Личный сайт веб-разработчика

  .hero__arrow-scroll
    a(href="#").btn-down
      +icon("arrow_down", "arrow-down-link")

  .triangles
    - if (title == 'Обо мне')
      +triangles('triangles-about', 'fillGrey', 'fillBright')
    - if (title == 'Мои работы')
      +triangles('triangles-works')
    - if (title == 'Блог')
      +triangles('triangles-white')

