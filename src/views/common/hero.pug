section.hero
    .socials.hero__icons
    -
      var socials = [
        ["vk", "https://vk.com/enmalafeev"],
        ["github", "https://github.com/enmalafeev"],
        ["in", "https://www.linkedin.com/in/%D0%B5%D0%B2%D0%B3%D0%B5%D0%BD%D0%B8%D0%B9-%D0%BC%D0%B0%D0%BB%D0%B0%D1%84%D0%B5%D0%B5%D0%B2-14403a120/"]
      ]
    .hero__links
      ul.socials
        each item in socials
          li.socials__item
            a(href=`${item[1]}`).socials__link
              +icon(item[0], "socials__link-icon")

    a(href="#").hamburger.hero__menu

    .hero__title
      .section-title
        //- image(imagePath, imageAlt, imageClass)

      .user.hero__user
        .user__img
          +image("avatar.jpg", "Малафеев Евгений", "user__img-pic")
        .user__desc
          h1.user__name Евгений Малафеев
          p.user__info Личный сайт веб-разработчика

    .hero__arrow-scroll
      a(href="#").btn-down
        +icon("arrow_down", "arrow-down-link")
