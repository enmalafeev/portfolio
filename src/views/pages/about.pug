extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
  section.hero
    .socials.hero__icons
    -
      var socials = [
        ["vk", "https://vk.com/enmalafeev"],
        ["github", "https://github.com/enmalafeev"],
        ["in", "https://www.linkedin.com/in/%D0%B5%D0%B2%D0%B3%D0%B5%D0%BD%D0%B8%D0%B9-%D0%BC%D0%B0%D0%BB%D0%B0%D1%84%D0%B5%D0%B5%D0%B2-14403a120/"]
      ]
    .hero__links
      ul.socials
        each item in socials
          li.socials__item
            a(href=`${item[1]}`).socials__link
              +icon(item[0], "socials__link-icon")

    a(href="#").hamburger.hero__menu

    .hero__title
      .section-title
        //- image(imagePath, imageAlt, imageClass)

      .user.hero__user
        .user__img
          +image("avatar.jpg", "Малафеев Евгений", "user__img-pic")
        .user__desc
          h1.user__name Евгений Малафеев
          p.user__info Личный сайт веб-разработчика

    .hero__arrow-scroll
      a(href="#").btn-down
        +icon("arrow_down", "arrow-down-link")

  section.about
    .about__left
      .about-triangle
        svg.triangle.triangle_fill_white

      .about__left-title
        h2.about-title__header обо мне
      .about__left-content
        .user-desc
          .user-desc__image
            img.user-desc__avatar
          .user-desc__data
            .user-desc__title
              h2.block-subtitle кто я
            .user-desc__text.text-content
              p Lorem ipsum dolor sit amet consectetur, adipisicing elit. Itaque voluptatum officiis nam vel voluptate eligendi molestias cupiditate fugiat, voluptates sed quis voluptatem pariatur blanditiis quidem culpa minima veniam reiciendis sapiente.
              p Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ullam iusto ipsum eligendi distinctio a esse rem nemo enim cumque aliquam. Commodi praesentium fugiat maiores enim voluptatum, a sequi dicta inventore?
    .about__right
      .about__triangle
        svg.triangle.triangle_fill_beige
      .about__right-title
        .block-subtitle Чем я могу быть вам полезен
      .about__right-description.text-content
        p Lorem, ipsum dolor sit amet consectetur adipisicing elit. Iusto quo nobis, maxime ipsam voluptatem, veritatis harum nostrum esse hic et sapiente quam doloremque temporibus consequatur aliquam adipisci porro, quidem a?
      .about__right-content
        -
          var skills = [
            ['Frontend', [['Html5', 30], ['css3', 50], ['javascript', 70]]],
            ['Backend', [['Html5', 30], ['css3', 50], ['javascript', 70]]],
            ['Workflow', [['Html5', 30], ['css3', 50], ['javascript', 70]]],
          ]
        ul.skills-list
          each skillsrow in skills
            li.skills-list__item.skills-row
              .skills-row__title #{skillsrow[0]}
              ul.skills-row__list
                each skill in skillsrow[1]
                  li.skills-row__item
                    figure.skill(data-percents="70")
                      svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
                        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
                        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_above
                      .skill__title #{skill[0]}
  section.map
    .google-map
    .map__data
      .contacts
        h2.contacts__title
          .block-subtitle Контакты
        address.contacts__data
          ul.contacts__list
            -
              var contacts = [
                ['skype', 'evgeny_malafeev'],
                ['mail', 'malafeev.en@yandex.ru'],
                ['phone', '+7911 222 33 44'],
                ['address', 'г.Санкт-Петербург пр.Авиаконструкторов д.20']
              ]
            each item in contacts
              li.contacts__item.contacts-row
                .contacts-row.contacts__icon
                  +icon(`../${item[0]}`, 'contacts__icon-img')
                .contacts-row.contacts__title #{item[1]}






