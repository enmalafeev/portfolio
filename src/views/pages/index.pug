extends ../auth.layout.pug

block content
  .wrapper
    main.main-content
      a(href="#").login-btn.auth-btn Авторизоваться
      .user-wrap
        .user
          .user__img
            +image("avatar.jpg", "Малафеев Евгений", "user__img-pic")
          .user__desc
            h1.user__name Евгений Малафеев
            p.user__info Личный сайт веб-разработчика
        -
          var socials = [
            ["vk", "https://vk.com/enmalafeev"],
            ["github", "https://github.com/enmalafeev"],
            ["in", "https://www.linkedin.com/in/%D0%B5%D0%B2%D0%B3%D0%B5%D0%BD%D0%B8%D0%B9-%D0%BC%D0%B0%D0%BB%D0%B0%D1%84%D0%B5%D0%B5%D0%B2-14403a120/"]
          ]
        .hero__links
          +socials("socials", "socials__green")
        +nav('main-menu', ['Мои работы', 'Обо мне', 'Блог'])
      footer.main-footer
        p &#169 Евгений Малафеев | Создано с любовью в LoftSchool 2018
